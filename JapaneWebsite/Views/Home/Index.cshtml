@model JapaneWebsite.Models.ViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ShareLayout.cshtml";


}
<div class="container-fluid" style="margin-top:30px">
    <div class="row">
        <div class="col-sm-9">
            <div class="card">
                <div class="card-header" style="height:50px">
                    <h4>Tin tức</h4>
                </div>
                <div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active" data-interval="10000">
                            <img src="https://source.unsplash.com/1600x900/?sakura" class="d-block w-100 img-slider" alt="...">
                        </div>
                        <div class="carousel-item" data-interval="2000">
                            <img src="https://source.unsplash.com/1600x900/?water" class="d-block w-100 img-slider" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="https://source.unsplash.com/1600x900/?japan" class="d-block w-100 img-slider" alt="...">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleInterval" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <hr />
            <div class="card">
                <div class="card-header" style="height:50px;">
                    <h4>Học tiếng Nhật</h4>
                </div>
                @Html.Partial("_ArticleHocTiengNhat", Model)

                <div class="card-footer text-right" style="">

                    @Html.ActionLink("Xem thêm", "Index", "LearningPosts", null, new { @class = "card-link" })
                </div>
            </div>
            <hr />
            <div class="card">
                <div class="card-header" style="height:50px">
                    <h4>Văn hóa</h4>
                </div>
                @Html.Partial("_ArticleVanHoaNhat", Model)

                <div class="card-footer text-right" style="">
                    @Html.ActionLink("Xem thêm", "Index", "TraditionPosts", null, new { @class = "card-link" })
                </div>
            </div>
            <hr />
            <div class="card">
                <div class="card-header" style="height:50px;">
                    <h4>Thi Thử JLPT</h4>
                </div>
                @Html.Partial("_ArticleTest", Model)
                <div class="card-footer text-right" style="">
                    <a href="#" class="card-link">Xem thêm</a>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            @Html.Partial("_Aside", Model)
            <br />
            <div class="card">
                <h4 class="card-header text-center" style="">Bài Viết</h4>
                <div class="card-body">
                    <h6 class="card-title">Tổng hợp từ vựng N5</h6>
                    <p class="card-text" style="overflow:hidden">Đây là bài tổng hợp tất cả các từ vựng N5 có được</p>
                    <a href="#" class="btn btn-primary">Tiếp tục</a>
                </div>
                <hr />
                <div class="card-body">
                    <h6 class="card-title">Tổng hợp ngữ pháp N4</h6>
                    <p class="card-text" style="overflow:hidden">Đây là bài tổng hợp tất cả các ngữ pháp N5 có được</p>
                    <a href="#" class="btn btn-primary">Tiếp tục</a>
                </div>
                <hr />
