@model IEnumerable<JapaneWebsite.StudyPost>
@using PagedList;
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Img)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Level.N)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThemeOfPost.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <img src="@item.Img" height="100px" width="100px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level.N)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThemeOfPost.Name)
            </td>
            <td>

                @Html.ActionLink("Details", "Details", new { id = item.IdStudyPost })

            </td>
        </tr>
    }

</table>
@{
    if (((IPagedList)Model).PageNumber == 1)
    {
        @Html.ActionLink("Previous page", "Index", new { Page_No = ((IPagedList)Model).PageNumber })
    }
    else
    {
        @Html.ActionLink("Previous page", "Index", new { Page_No = ((IPagedList)Model).PageNumber - 1 })
    }

}

Page @(((IPagedList)Model).PageCount < ((IPagedList)Model).PageNumber ? 0 : ((IPagedList)Model).PageNumber) in @(((IPagedList)Model).PageCount) (pages)|
@{
    if (((IPagedList)Model).PageNumber >= ((IPagedList)Model).PageCount)
    {
        @Html.ActionLink("Next page", "Index", new { Page_No = ((IPagedList)Model).PageNumber })
    }
    else
    {
        @Html.ActionLink("Next page", "Index", new { Page_No = ((IPagedList)Model).PageNumber + 1 })
    }

}

