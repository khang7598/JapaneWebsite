    @using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "alert alert-primary" }))
    {
    @Html.AntiForgeryToken()

    <ul class="">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <form class="form-inline">
        <a class="btn btn-success ml-sm-2 mr-sm-2" href="~/account/login">Đăng nhập<span class="sr-only"></span></a>
        <a class="btn btn-danger" href="~/account/register">Đăng ký<span class="sr-only"></span></a>
    </form>
}
