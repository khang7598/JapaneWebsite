@model IEnumerable<JapaneWebsite.StudyPost>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Img)
        </th>
        @*<th style="width:100px;text-overflow:ellipsis">
            @Html.DisplayNameFor(model => model.Detail)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Level.N)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThemeOfPost.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.Date))          
        </td>
        <td>
            <img src="@item.Img" height="100px" width="100px"/>
        </td>
        @*<td style="width:100px;text-overflow:ellipsis">
            @Html.Raw(item.Detail)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Level.N)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThemeOfPost.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdStudyPost }) |
            @Html.ActionLink("Details", "Details", new { id=item.IdStudyPost }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdStudyPost })
        </td>
    </tr>
}

</table>
