@model IEnumerable<JapaneWebsite.StudyPost>
@using PagedList;
@{
    ViewBag.Title = "Index";
}


<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4 ">
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-outline-primary" })
    <div class="d-flex justify-content-between flex-wrap align-items-center pb-2 mb-3 border-bottom" style="margin-top:10px">
        @*<tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Img)
            </th>*@
        @*<th style="width:100px;text-overflow:ellipsis">
                @Html.DisplayNameFor(model => model.Detail)
            </th>*@
        @*<th>
                    @Html.DisplayNameFor(model => model.Level.N)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ThemeOfPost.Name)
                </th>
                <th></th>
            </tr>*@

        @foreach (var item in Model)
        {
            <div class="container">
                <div class="card-body shadow">
                    <img class="rounded float-left col-2" alt="Error" src="@item.Img" style="width:200px;height:150px" />
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <p>@Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.Date))</p>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdStudyPost }, new { @class = "btn btn-outline-success" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdStudyPost }, new { @class = "btn btn-outline-warning" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdStudyPost }, new { @class = "btn btn-outline-danger" })
                </div>
                <hr />
            </div>
            @*<tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.Date))
                </td>
                <td>
                    <img src="@item.Img" height="100px" width="100px"/>
                </td>
                @*<td style="width:100px;text-overflow:ellipsis">
                    @Html.Raw(item.Detail)
                </td>*@
            @*<td>
                    @Html.DisplayFor(modelItem => item.Level.N)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThemeOfPost.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdStudyPost }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdStudyPost }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdStudyPost })
                </td>
                </tr>*@
        }
    </div>
    <div class="text-center">
        @if (((IPagedList)Model).PageNumber == 1)
        {
            @Html.ActionLink("<<", "Index", new { Page_No = ((IPagedList)Model).PageNumber }, new { @class = "page-item" })
        }
        else
        {
            @Html.ActionLink("<<", "Index", new { Page_No = ((IPagedList)Model).PageNumber - 1 })
        }
        @*| Trang @(((IPagedList)Model).PageCount < ((IPagedList)Model).PageNumber ? 1 : ((IPagedList)Model).PageNumber) trong tổng số @(((IPagedList)Model).PageCount) (trang) |*@
        Page @(((IPagedList)Model).PageCount < ((IPagedList)Model).PageNumber ? 0 : ((IPagedList)Model).PageNumber)  of @(((IPagedList)Model).PageCount)
        @if (((IPagedList)Model).PageNumber < ((IPagedList)Model).PageCount)
        {
            @Html.ActionLink(">>", "Index", new { Page_No = ((IPagedList)Model).PageNumber + 1 })
        }
        else
        {
            @Html.ActionLink(">>", "Index", new { Page_No = ((IPagedList)Model).PageNumber })
        }
    </div>
</main>
