@model IEnumerable<JapaneWebsite.CulturalPost>

@{
    ViewBag.Title = "Index";
}


<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4 ">
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-outline-primary" })
    <div class="d-flex justify-content-between flex-wrap align-items-center pb-2 mb-3 border-bottom" style="margin-top:10px">
        @foreach (var item in Model)
        {
            <div class="container">
                <div class="card-body shadow">
                    <img class="rounded float-left col-2" alt="Error" src="@item.Img" style="width:200px;height:150px" />
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text">@item.Place.CityName</p>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdCultural }, new { @class = "btn btn-outline-success" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdCultural }, new { @class = "btn btn-outline-warning" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdCultural }, new { @class = "btn btn-outline-danger" })
                </div>
                @*@Html.DisplayFor(modelItem => item.Name)

                    @Html.DisplayFor(modelItem => item.Description)

                    @Html.DisplayFor(modelItem => item.Date)

                    @Html.DisplayFor(modelItem => item.Img)

                    @Html.Raw(item.Detail)

                    @Html.DisplayFor(modelItem => item.Place.CityName)

                    @Html.DisplayFor(modelItem => item.ThemeOfPost.Name)*@

            </div>
        }
    </div>
</main>