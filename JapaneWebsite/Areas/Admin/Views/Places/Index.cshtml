@model IEnumerable<JapaneWebsite.Place>

@{
    ViewBag.Title = "Index";
}
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4 ">
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-outline-primary" })
    <div class="d-flex justify-content-between flex-wrap align-items-center pb-2 mb-3 border">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CityName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Detail)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CityName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Detail)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IdPlace }, new { @class = "btn btn-outline-success" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.IdPlace }, new { @class = "btn btn-outline-warning" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.IdPlace }, new { @class = "btn btn-outline-danger" })
                    </td>
                </tr>
            }
        </table>
    </div>
</main>